{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"attributePosition": "multiline",
		"expand": "always",
		"lineWidth": 320,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf"
	},
	"javascript": {
		"globals": [
			"Astro"
		],
		"formatter": {
			"quoteStyle": "single",
			"attributePosition": "auto",
			"trailingCommas": "all"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"maxSize": 1000000,
		"includes": [
			"**/*.*",
			"!**/dist/**/*.*"
		]
	}
}
